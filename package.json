{
  "name": "surabayajs.org",
  "description": "Landing page for SurabayaJS üêä",
  "version": "6.0.0",
  "repository": "https://github.com/surabayajs/surabayajs.org.git",
  "author": "Griko Nibras <griko@surabayajs.org>",
  "scripts": {
    "build": "node scripts/build.mjs && next build && yarn sitemap",
    "build:local": "env-cmd yarn build",
    "build:static": "yarn build && next export",
    "build:static-local": "env-cmd yarn build:static",
    "clean": "rimraf \".next\" \"public/!(.gitkeep)\"",
    "codegen": "env-cmd yarn graphql-codegen",
    "deduplicate": "npx yarn-deduplicate && yarn",
    "dev": "next",
    "develop": "next",
    "lint": "eslint --fix \"src/**/*.{js,jsx,ts,tsx}\"",
    "sitemap": "next-sitemap --config src/config/sitemap.js",
    "start": "next start",
    "type-check": "tsc --noEmit",
    "validate": "yarn lint && yarn type-check"
  },
  "dependencies": {
    "@chakra-ui/react": "^1",
    "@emotion/cache": "^11",
    "@emotion/react": "^11",
    "@emotion/server": "^11",
    "@emotion/styled": "^11",
    "@types/node": "^14",
    "@types/nprogress": "^0",
    "@types/react": "^17",
    "@types/react-dom": "^17",
    "critters": "^0",
    "date-fns": "^2",
    "eslint": "^7",
    "eslint-config-kentcdodds": "^19",
    "eslint-config-next": "^11",
    "eslint-config-prettier": "^8",
    "eslint-plugin-jsx-a11y": "^6",
    "eslint-plugin-prettier": "^3",
    "eslint-plugin-react": "^7",
    "eslint-plugin-simple-import-sort": "^7",
    "favicons": "^6",
    "framer-motion": "^4",
    "graphql": "^15",
    "graphql-request": "^3",
    "graphql-tag": "^2",
    "litkey": "^0",
    "next": "^11",
    "next-seo": "^4",
    "next-sitemap": "^1",
    "nprogress": "^0",
    "react": "^17",
    "react-dom": "^17",
    "react-icons": "^4",
    "react-markdown": "^6",
    "typescript": "^4"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^2",
    "@graphql-codegen/cli": "^1",
    "@graphql-codegen/schema-ast": "^1",
    "@graphql-codegen/typescript": "^1",
    "@graphql-codegen/typescript-graphql-request": "^3",
    "@graphql-codegen/typescript-operations": "^1",
    "copy": "^0",
    "env-cmd": "^10",
    "eslint": "^8",
    "eslint-config-kdnj": "^2",
    "husky": "^7",
    "lint-staged": "^12",
    "npm-run-all": "^4",
    "rimraf": "^3"
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-kdnj/react",
      "plugin:@next/next/recommended"
    ],
    "ignorePatterns": [
      ".next",
      "generated",
      "node_modules"
    ],
    "rules": {
      "jsx-a11y/anchor-is-valid": "off"
    },
    "root": true
  },
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write"
    ],
    "**/*.{js,cjs,mjs,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "prettier": {
    "endOfLine": "auto",
    "printWidth": 120,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all"
  },
  "license": "MIT"
}
